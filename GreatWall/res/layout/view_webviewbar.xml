<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/webview_bar"
    android:orientation="horizontal" >
	
    <com.example.preciouskey.views.NumberProgressBar
        android:id="@+id/pb_loading"
        style="@style/NumberProgressBar_Relax_Blue"
        android:layout_width="fill_parent"
        android:layout_height="5px"
        >
    </com.example.preciouskey.views.NumberProgressBar>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_webview_back"
            android:layout_width="0px"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/webview_back_selector" />

        <ImageView
            android:id="@+id/iv_webview_refresh"
            android:layout_width="0px"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/webview_refresh_selector" />

        <ImageView
            android:id="@+id/iv_webview_forward"
            android:layout_width="0px"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/webview_forward_selector" />

        <ImageView
            android:id="@+id/iv_webview_browser"
            android:layout_width="0px"
            android:layout_height="30dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/more_icon_browser" />
    </LinearLayout>

</RelativeLayout>